#include<iostream>
using namespace std;
int main()
{
	int num;
	int r,t,sum=0;
	cout<<"Enter a three digit number: "<<endl;
	cin>>num;
	cout<<"The Entered umber is: "<<num<<endl;
	for(int i=0;i<3;i++)
	{
		r=num%10;
		t=num/10;
		num =t;
		sum=sum+r;
	}
	cout<<"The sum of the 3digit numbers are: "<<sum<<endl;
	return 0;
}
